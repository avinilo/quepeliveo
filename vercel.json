{
  "version": 2,
  "buildCommand": "pnpm run build",
  "builds": [
    { "src": "api/tmdb/[...path].js", "use": "@vercel/node" },
    { "src": "dist/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/tmdb/(.*)", "dest": "/api/tmdb/[...path].js" },
    { "src": "/(.*)", "dest": "dist/$1" }
  ]
}
